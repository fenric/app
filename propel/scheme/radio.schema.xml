<database name="default" namespace="Propel\Models" tablePrefix="fenric_">
	<behavior name="auto_add_pk" />

	<table name="radio">
		<column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />

		<column name="title" type="varchar" required="true" primaryString="true" />
		<column name="stream" type="varchar" required="true" />

		<column name="created_at" type="timestamp" />
		<column name="created_by" type="integer" />

		<column name="updated_at" type="timestamp" />
		<column name="updated_by" type="integer" />

		<foreign-key
			name="a1c4062e-ebcb-47d9-93f3-8685c012b613"
			foreignTable="user"
			onDelete="setnull"
			onUpdate="cascade"
			defaultJoin="INNER JOIN">
			<reference local="created_by" foreign="id" />
		</foreign-key>

		<foreign-key
			name="ab8cd028-2b7e-442e-bff9-f7267b878d83"
			foreignTable="user"
			onDelete="setnull"
			onUpdate="cascade"
			defaultJoin="INNER JOIN">
			<reference local="updated_by" foreign="id" />
		</foreign-key>

		<index name="be581dc7-8bb8-4cae-a07e-6d72e33acba9">
			<index-column name="title" />
		</index>

		<index name="b7406d80-ec28-4961-861d-800a5631b6b4">
			<index-column name="created_at" />
			<index-column name="updated_at" />
		</index>

		<vendor type="mysql">
			<parameter name="Engine" value="InnoDB" />
			<parameter name="Charset" value="utf8" />
			<parameter name="Collate" value="utf8_unicode_ci" />
		</vendor>

		<behavior name="Fenric\Propel\Behaviors\Authorable">
			<parameter name="create_column" value="created_by" />
			<parameter name="update_column" value="updated_by" />
		</behavior>

		<behavior name="Fenric\Propel\Behaviors\Timestampable">
			<parameter name="create_column" value="created_at" />
			<parameter name="update_column" value="updated_at" />
		</behavior>

		<behavior name="validate">
			<parameter name="7897be97-482b-4420-9b9a-d31172ec862b" value="{column: title, validator: NotBlank}" />
			<parameter name="7573e120-a0f0-4364-81d7-856161d6d795" value="{column: title, validator: Length, options: {max: 255}}" />

			<parameter name="3f6163c2-8202-4181-8e1a-f29ec6b838cc" value="{column: stream, validator: NotBlank}" />
			<parameter name="3717161a-6b74-4e40-adec-11186e5dc387" value="{column: stream, validator: Length, options: {max: 255}}" />
			<parameter name="39f9efb7-0c54-461f-878e-403b009a0549" value="{column: stream, validator: Url}" />
		</behavior>
	</table>
</database>
